{
  "custom": {
    "readOnly": false
  },
  "params": {
    "tagPath": "[default]Writeable/DocumentTag"
  },
  "propConfig": {
    "custom.readOnly": {
      "binding": {
        "config": {
          "fallbackDelay": 2.5,
          "mode": "indirect",
          "references": {
            "tagPath": "{view.params.tagPath}"
          },
          "tagPath": "{tagPath}.ReadOnly"
        },
        "type": "tag"
      },
      "persistent": true
    },
    "params.tagPath": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 200,
      "width": 522
    }
  },
  "root": {
    "children": [
      {
        "children": [
          {
            "meta": {
              "name": "TextArea"
            },
            "position": {
              "basis": "200px",
              "grow": 1
            },
            "propConfig": {
              "props.text": {
                "binding": {
                  "config": {
                    "fallbackDelay": 2.5,
                    "mode": "indirect",
                    "references": {
                      "tagPath": "{view.params.tagPath}"
                    },
                    "tagPath": "{tagPath}"
                  },
                  "transforms": [
                    {
                      "expression": "jsonFormat({value})",
                      "type": "expression"
                    }
                  ],
                  "type": "tag"
                },
                "onChange": {
                  "enabled": null,
                  "script": "\tif origin \u003d\u003d \"Browser\":\n\t\tself.props.text \u003d previousValue.value"
                }
              }
            },
            "props": {
              "rejectUpdatesWhileFocused": false,
              "style": {
                "classes": "TagDashboard/Value"
              }
            },
            "type": "ia.input.text-area"
          }
        ],
        "meta": {
          "name": "FlexContainer_0"
        },
        "position": {
          "grow": 1
        },
        "props": {
          "direction": "column"
        },
        "type": "ia.container.flex"
      },
      {
        "children": [
          {
            "events": {
              "dom": {
                "onClick": {
                  "config": {
                    "script": "\ttagPath \u003d self.view.params.tagPath\n\tTagDashboard.editTag(tagPath)"
                  },
                  "scope": "G",
                  "type": "script"
                }
              }
            },
            "meta": {
              "name": "Icon"
            },
            "position": {
              "basis": "24px",
              "shrink": 0
            },
            "propConfig": {
              "position.display": {
                "binding": {
                  "config": {
                    "expression": "{session.custom.settings.tagEdit} \u0026\u0026 !{view.custom.readOnly}"
                  },
                  "type": "expr"
                }
              }
            },
            "props": {
              "path": "material/edit",
              "style": {
                "cursor": "pointer"
              }
            },
            "type": "ia.display.icon"
          }
        ],
        "meta": {
          "name": "FlexContainer"
        },
        "position": {
          "basis": "24px",
          "shrink": 0
        },
        "props": {
          "direction": "column",
          "style": {
            "marginLeft": "5px"
          }
        },
        "type": "ia.container.flex"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "style": {
        "overflow": "hidden"
      }
    },
    "type": "ia.container.flex"
  }
}